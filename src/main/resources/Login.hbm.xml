<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mindtree.vehiclebusiness.entity">
	<class name="Login" table="LOGIN">
		<id name="loginId" column="LOGIN_ID">
			<generator class="increment" />
		</id>
		<property name="username" column="USER_NAME" type="string" />

		<property name="password" column="PASSWORD" type="string" />

		<property name="confirmPassword" column="CONFIRM_PASSWORD"
			type="string" />

		<property name="email" column="EMAIL" type="string" />

		<property name="mobileNo" column="MOBILE_NO" type="string" />

	</class>
</hibernate-mapping>